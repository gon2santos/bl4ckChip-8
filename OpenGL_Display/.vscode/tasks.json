{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-Wall",
				"-o",
				"${fileDirname}/bin/${fileBasenameNoExtension}",
				"${file}",
				"glad.c",
				"-lglfw3",
				"-lGL",
				"-lX11", 
				"-lpthread", 
				"-lXrandr", 
				"-lXi", 
				"-ldl", 
				"-lXxf86vm", 
				"-lm"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"isDefault": true,
				"kind": "build"
			},
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}